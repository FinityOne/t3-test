import { warn } from "console";
import { signIn, signOut, useSession } from "next-auth/react";
import Head from "next/head";
import Link from "next/link";
import { useState } from "react";
import { api } from "~/utils/api";

export default function Home() {
  const { data: events, isLoading, refetch } = api.example.getEvents.useQuery();
  const { mutateAsync } = api.example.createEvent.useMutation();

  const [eventName, setEventName] = useState<string>("");

  const createEvent = async () => {
    try {
      await mutateAsync({
        name: "test event",
      });

      refetch();
    } catch (error) {
      console.log(error);
    }
  };

  const onChange = (newValue: string) => {
    setEventName(newValue);
  };

  return (
    <>
      <Head>
        <title>Create T3 App</title>
        <meta name="description" content="Generated by create-t3-app" />
        <link rel="icon" href="/favicon.ico" />
      </Head>
      <main className="flex min-h-screen flex-col items-center justify-center bg-gradient-to-b from-[#2e026d] to-[#15162c]">
        <h1 className="text-6xl font-bold text-white">Welcome to Rameelo</h1>
        {isLoading && <p>Loading...</p>}
        <div>
          {events?.map((event) => (
            <div key={event.id}>
              <h1>{event.title}</h1>
              <p>{event.description}</p>
            </div>
          ))}

          <input type="text" value={eventName} onClick={onChange} />

          <button onClick={createEvent}>create event</button>
        </div>
      </main>
    </>
  );
}

